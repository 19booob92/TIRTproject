<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.pwr.tirt.plangen.activities.AddEventActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/linearLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="@string/details_title"
                android:id="@+id/textViewTitle"
                android:layout_weight="0.5"

                />

            <EditText
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:id="@+id/editTextTitle"
                android:layout_weight="0.5" />


        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="@string/detail_day"
                android:id="@+id/textViewdzientyg"
                android:layout_weight="0.5"

                />



            <Spinner
                android:id="@+id/spinnerdni"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:entries="@array/dnityg"
                android:layout_weight="1">

            </Spinner>


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="@string/detail_week"
                android:id="@+id/textViewWeek"

                android:layout_weight="0.5"

                />
            <Spinner
                android:id="@+id/spinnerjakitydzien"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:entries="@array/jakitydz"
                android:layout_weight="1">

            </Spinner>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">


        <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="@string/details_timeStart"
                android:id="@+id/textViewtimeStart"
                android:layout_weight="0.5"

                />

            <EditText
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:id="@+id/editTexttimeStart"
                android:inputType="time"
                android:ems="10"
                android:layout_weight="0.5" />


        </LinearLayout>
        <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="@string/details_timeEnd"
            android:id="@+id/textViewTimeEnd"
            android:layout_weight="0.5"

            />

        <EditText
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:id="@+id/editTextTimeEnd"
            android:inputType="time"
            android:ems="10"
            android:layout_weight="0.5" />


    </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="@string/details_location"
                android:id="@+id/textViewlocation"
                android:layout_weight="0.5"

                />

            <EditText
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:id="@+id/editTextlocation"
                android:layout_weight="0.5" />


        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="@string/detail_tutor"
                android:id="@+id/textViewTutor"
                android:layout_weight="0.5"

                />

            <EditText
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:id="@+id/editTextTutor"
                android:layout_weight="0.5" />


        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <Button
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:text="@string/add"
              android:id="@+id/BtnAdd"


             />


        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
