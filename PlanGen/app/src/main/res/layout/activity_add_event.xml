<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/backgroud_color_layout"
    tools:context="org.pwr.tirt.plangen.activities.AddEventActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/linearLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">



         <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

             <TextView
                 android:layout_width="0dp"
                 android:layout_height="30dp"
                 android:layout_marginRight="170dp"
                 android:layout_weight="0.5"
                 android:text="@string/header_add"
                 android:textStyle="bold"
                 android:id="@+id/textViewHeader_add"
                 android:background="@drawable/textview_header"

                 />
         </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:text="@string/details_title"
                android:layout_weight="0.3"
                android:background="@drawable/add_event_headings"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:id="@+id/textViewTitle"
                android:layout_marginTop="5dp"

               />

            <EditText
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:id="@+id/editTextTitle"
                android:layout_weight="0.5" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="@string/detail_tutor"
                android:id="@+id/textViewTutor"
                android:layout_weight="0.3"
                android:background="@drawable/add_event_headings"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"

                />

            <EditText
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:id="@+id/editTextTutor"
                android:layout_weight="0.5" />


        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="@string/details_location"
                android:id="@+id/textViewlocation"
                android:layout_weight="0.3"
                android:background="@drawable/add_event_headings"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"

                />

            <EditText
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:id="@+id/editTextlocation"
                android:layout_weight="0.5" />


        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">


            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="@string/details_timeStart"
                android:id="@+id/textViewtimeStart"
                android:layout_weight="0.3"
                android:background="@drawable/add_event_headings"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"

                />

            <EditText
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:id="@+id/editTexttimeStart"
                android:inputType="time"
                android:ems="10"
                android:layout_weight="0.5" />


        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="@string/details_timeEnd"
                android:id="@+id/textViewTimeEnd"
                android:layout_weight="0.3"
                android:background="@drawable/add_event_headings"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"

                />

            <EditText
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:id="@+id/editTextTimeEnd"
                android:inputType="time"
                android:ems="10"
                android:layout_weight="0.5" />


        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="@string/detail_type"
                android:id="@+id/textViewType"
                android:layout_weight="0.3"
                android:background="@drawable/add_event_headings"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"

                />
            <Spinner
                android:id="@+id/spinnertype"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:entries="@array/type"
                android:layout_weight="0.5">

            </Spinner>

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:text="@string/detail_day"
                android:id="@+id/textViewdzientyg"
                android:layout_weight="0.3"
                android:background="@drawable/add_event_headings"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"

                />

            <Spinner
                android:id="@+id/spinnerdni"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:entries="@array/weekday"
                android:layout_weight="0.5">

            </Spinner>


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:text="@string/detail_week"
                android:id="@+id/textViewWeek"
                android:layout_weight="0.3"
                android:background="@drawable/add_event_headings"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"

                />
            <Spinner
                android:id="@+id/spinnerjakitydzien"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:entries="@array/often"
                android:layout_weight="0.5">

            </Spinner>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <Button
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:layout_marginLeft="150dp"
              android:background="@drawable/button_add"
              android:text="@string/add"
              android:textStyle="bold"
              android:id="@+id/BtnAdd"
              android:layout_marginTop="5dp"
                android:onClick="OnClickAddEvent"


             />


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
