
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/backgroud_color_layout"
    tools:context="org.pwr.tirt.plangen.activities.AddEventActivity"
  >
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/linearLayout"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">



            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:textColor="@color/black"
                    android:layout_weight="0.5"
                    android:text="@string/header_add"
                    android:textStyle="bold"
                    android:id="@+id/textViewHeader_add"


                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="-2px">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:text="@string/details_title"
                    android:layout_weight="1"
                    android:background="@drawable/corner_top_left_shadow"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:id="@+id/textViewTitle"
                    android:layout_marginTop="-2dp"

                    />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:id="@+id/editTextTitle"
                    android:layout_weight="1"
                    android:background="@drawable/corner_top_right_shadow"
                    android:layout_marginTop="-2dp"
                    android:layout_marginLeft="-5dp"/>


            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="-2px">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:text="@string/details_tutor"
                    android:id="@+id/textViewTutor"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:background="@drawable/add_event_headingsshadow"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="-2dp"

                    />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:id="@+id/editTextTutor"
                    android:layout_weight="1"
                    android:background="@drawable/add_event_headingsshadow"
                    android:layout_marginTop="-2dp"
                    android:layout_marginLeft="-5dp"/>


            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="-2px">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:text="@string/details_location"
                    android:id="@+id/textViewlocation"
                    android:layout_weight="1"
                    android:background="@drawable/add_event_headingsshadow"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="-2dp"

                    />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:id="@+id/editTextlocation"
                    android:layout_weight="1"
                    android:background="@drawable/add_event_headingsshadow"
                    android:layout_marginTop="-2dp"
                    android:layout_marginLeft="-5dp"/>


            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="-2px">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:text="@string/details_timeStart"
                    android:id="@+id/textViewtimeStart"
                    android:layout_weight="1"
                    android:background="@drawable/add_event_headingsshadow"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="-2dp"

                    />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:id="@+id/editTexttimeStart"
                    android:focusable="false"
                    android:inputType="time"
                    android:ems="10"
                    android:layout_weight="1"
                    android:background="@drawable/add_event_headingsshadow"
                    android:layout_marginTop="-2dp"
                    android:layout_marginLeft="-5dp"/>


            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="-2px">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:text="@string/details_timeEnd"
                    android:id="@+id/textViewTimeEnd"
                    android:layout_weight="1"
                    android:background="@drawable/add_event_headingsshadow"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="-2dp"


                    />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:id="@+id/editTextTimeEnd"
                    android:focusable="false"
                    android:inputType="time"
                    android:ems="10"
                    android:layout_weight="1"
                    android:background="@drawable/add_event_headingsshadow"
                    android:layout_marginTop="-2dp"
                    android:layout_marginLeft="-5dp"/>


            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="-2px">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:text="@string/details_type"
                    android:id="@+id/textViewType"
                    android:layout_weight="1"
                    android:background="@drawable/add_event_headingsshadow"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="-2dp"

                    />
                <Spinner
                    android:id="@+id/spinnertype"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:entries="@array/event_type"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/add_event_headingsshadow"
                    android:layout_marginTop="-2dp"
                    android:layout_marginLeft="-5dp">

                </Spinner>

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="-2px">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:text="@string/details_day"
                    android:id="@+id/textViewdzientyg"
                    android:layout_weight="1"
                    android:background="@drawable/add_event_headingsshadow"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="-2dp"

                    />

                <Spinner
                    android:id="@+id/spinnerdni"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:entries="@array/weekday"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:background="@drawable/add_event_headingsshadow"
                    android:layout_marginTop="-2dp"
                    android:layout_marginLeft="-5dp">

                </Spinner>


            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="-2px">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:text="@string/details_week_type"
                    android:id="@+id/textViewWeek"
                    android:layout_weight="1"
                    android:background="@drawable/corner_bottom_left"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="-2dp"

                    />
                <Spinner
                    android:id="@+id/spinnerjakitydzien"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:entries="@array/week_repetition"
                    android:layout_weight="1"
                    android:background="@drawable/corner_bottom_right"
                    android:layout_marginTop="-2dp"
                    android:layout_marginLeft="-5dp"
                    >

                </Spinner>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="0px">

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="150dp"
                    android:background="@drawable/button_add"
                    android:textColor="@color/black"
                    android:text="@string/add"
                    android:textStyle="bold"
                    android:id="@+id/BtnAdd"
                    android:layout_marginTop="5dp"
                    android:onClick="OnClickAddEvent"


                    />


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>