<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".TestActivity"
    android:background="@color/backgroud_color_layout"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bacgroud" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                style="@style/TextAppearance.AppCompat.Medium"
                android:text="@string/index_number" />

            <EditText
                android:id="@+id/editTextIndexNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bacgroud"
                android:inputType="numberDecimal"/>

            <Button
                android:id="@+id/buttonDownload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/download"
                android:background="@drawable/button_add"
                android:onClick="onClickDownloadData" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="30dp"
                android:background="@color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="30dp"
                android:background="@color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                style="@style/TextAppearance.AppCompat.Medium"
                android:text="@string/semester_settings" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                style="@style/TextAppearance.AppCompat.Medium"
                android:text="@string/semester_start_date" />

            <EditText
                android:id="@+id/editTextSemesterStartDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bacgroud"
                android:focusable="false"
                android:inputType="date"
                android:ems="10" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                style="@style/TextAppearance.AppCompat.Medium"
                android:text="@string/semester_end_date" />

            <EditText
                android:id="@+id/editTextSemesterEndDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bacgroud"
                android:focusable="false"
                android:inputType="date"
                android:ems="10" />

            <Button
                android:id="@+id/buttonSemesterSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/change"
                android:background="@drawable/button_add"
                android:onClick="onClickSemesterSettings"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
