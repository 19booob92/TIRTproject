<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".LayoutActivity"
    android:orientation="horizontal" >

    <ListView
        android:id="@+id/listViewEvents"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.85" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.15">
        <Button
            android:id="@+id/buttonMonday"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            style="?android:attr/buttonStyleSmall"
            android:text="@string/monday"
            android:layout_weight="1" />

        <Button
            android:id="@+id/buttonTuesday"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            style="?android:attr/buttonStyleSmall"
            android:text="@string/tuesday"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnWednesday"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            style="?android:attr/buttonStyleSmall"
            android:text="@string/wednesday"
            android:layout_weight="1" />

        <Button
            android:id="@+id/buttonThursday"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            style="?android:attr/buttonStyleSmall"
            android:text="@string/thursday"
            android:layout_weight="1" />

        <Button
            android:id="@+id/buttonFriday"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            style="?android:attr/buttonStyleSmall"
            android:text="@string/Friday"
            android:layout_weight="1" />

        <Button
            android:id="@+id/buttonSaturday"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            style="?android:attr/buttonStyleSmall"
            android:text="@string/Saturday"
            android:layout_weight="1" />

        <Button
            android:id="@+id/buttonSunday"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            style="?android:attr/buttonStyleSmall"
            android:text="@string/Sunday"
            android:layout_weight="1" />
        </LinearLayout>

</LinearLayout>
